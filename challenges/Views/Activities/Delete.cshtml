@model challenges.Models.Activity
@{
    ViewData["Title"] = "Delete Challenge Activity";
}
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <strong class="card-title">Delete Activity</strong>
            </div>
            <div class="card-body">

                <h5>Are you sure you want to delete <i>@Html.DisplayFor(model => model.ActivityName)</i>?</h5>
                <br />

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ActivityId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-info">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
