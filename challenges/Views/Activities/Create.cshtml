@model challenges.Models.Activity
@{
    ViewData["Title"] = "Create Challenge Activity";
}
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Create Challenge Activity</strong>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ActivityName" class="control-label"></label>
                        <select asp-for="ActivityName" class="form-control" asp-items="ViewBag.ActivityName"></select>
                        <span asp-validation-for="ActivityName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </form>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
