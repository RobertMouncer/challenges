@model challenges.Models.UserChallenge
@{
    ViewData["Title"] = "Delete User Challenge";
}
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <strong class="card-title">Delete Challenge</strong>
            </div>
            <div class="card-body">

                <h5>Are you sure you want to delete this?</h5>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.UserId)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UserId)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Challenge)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Challenge.ChallengeId)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.PercentageComplete)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PercentageComplete)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="UserChallengeId" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-info">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>