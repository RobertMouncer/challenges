@model challenges.Models.Challenge
@{
    ViewData["Title"] = "Delete Challenge";
}
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <strong class="card-title">Delete Challenge</strong>
            </div>
            <div class="card-body">

                <h5>Are you sure you want to delete this challenge?</h5>
                <hr />
                <div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ChallengeId" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-info">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>